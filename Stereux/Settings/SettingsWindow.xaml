<Window x:Class="Stereux.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stereux.Settings"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800" Icon="/Resources/Icons/stereux_icon.png">
    <TabControl>
        <TabItem Header="Settings">
            <Frame Source="/Settings/SettingsPage.xaml" />
        </TabItem>
        <TabItem Header="Songs">
            <Frame Source="/Settings/SongsPage.xaml" />
        </TabItem>
        <TabItem Header="Sources">
            <Frame Source="/Settings/SourcesPage.xaml" />
        </TabItem>
        <TabItem Header="About">
            <Frame Source="/Settings/AboutPage.xaml" />
        </TabItem>
    </TabControl>
</Window>