<Page x:Class="Stereux.Settings.SongsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Stereux.Settings"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SongsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- TODO: Add a search bar -->
        <DataGrid x:Name="SongsDataGrid" CanUserAddRows="False" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Path='Id'}"  IsReadOnly="True" />
                <DataGridTextColumn Header="Source" Binding="{Binding Path='Source'}" IsReadOnly="True" />
                <DataGridTextColumn Header="Name" Binding="{Binding Path='Name'}" IsReadOnly="True" />
                <DataGridTextColumn Header="Artists" Binding="{Binding Path='Artists'}" IsReadOnly="True" />
                <DataGridTextColumn Header="AlbumCoverURL" Binding="{Binding Path='AlbumCoverURL'}" IsReadOnly="True" />
                <DataGridTextColumn Header="Genre" Binding="{Binding Path='Genre'}" />
                <DataGridTextColumn Header="InfoURL" Binding="{Binding Path='InfoURL'}" IsReadOnly="True" />
                <DataGridTextColumn Header="SongURL" Binding="{Binding Path='SongURL'}" IsReadOnly="True" />
                <DataGridTextColumn Header="AlbumCoverLocalPath" Binding="{Binding Path='AlbumCoverLocalPath'}" />
                <DataGridTextColumn Header="SongLocalPath" Binding="{Binding Path='SongLocalPath'}" IsReadOnly="True" />
                <DataGridTemplateColumn Header="Remove">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="DeleteSongBtn"
                                    CommandParameter="{Binding 'Id'}"
                                    Width="25"
                                    Foreground="{x:Null}"
                                    BorderBrush="{x:Null}"
                                    Click="DeleteSongBtn_OnClick">
                                <Button.Background>
                                    <ImageBrush ImageSource="/Resources/Icons/Delete icon.png" />
                                </Button.Background>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Download">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="DownloadBtn"
                                    Content="Download"
                                    CommandParameter="{Binding 'Id'}"
                                    Click="DownloadBtn_OnClick" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!-- TODO: Add a Play next button -->
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <Button x:Name="GetSongsBtn"
                        Content="Get songs"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Margin="0,10"
                        Click="GetSongsBtn_OnClick" />
                <Button x:Name="ClearSongsBtn"
                        Content="Clear songs"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Margin="0,10"
                        Click="ClearSongsBtn_OnClick" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>